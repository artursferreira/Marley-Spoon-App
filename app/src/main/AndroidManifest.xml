<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.artur.marleyspoon">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MarleySpoonApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MarleySpoon">
        <activity android:name="com.artur.marleyspoon.main.presentation.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.artur.marleyspoon.detail.DetailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/Theme.MarleySpoon.NoActionBar"/>
    </application>

</manifest>